(* Предосталвяет процедуры для работы с памятью.
        BSD-2               *)
МОДУЛЬ модПамять;

ИМПОРТ мОш := модОшибки,
    мОшКонст := модОшибкиКонст,
    мПроц := модПроцесс;

ПРОЦЕДУРА MemErr*(err: BOOLEAN);
  НАЧАЛО
    ЕСЛИ err ТОГДА
      мОш.Сообщ(72);
      мПроц.Закончить(1)
    КОНЕЦ
  КОНЕЦ MemErr;

КОНЕЦ модПамять.
