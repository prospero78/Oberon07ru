(* Предосталвяет процедуры для работы с памятью.
        BSD-2               *)
МОДУЛЬ модПамять;

ИМПОРТ мОш := модОшибки,
    мОшКонст := модОшибкиКонст,
    мПроц := модПроцесс,
    мАпи := API;

ПРОЦЕДУРА Ошибка*(err: БУЛЕВО);
  НАЧАЛО
    ЕСЛИ err ТОГДА
      мОш.Сообщ(72); (* недостаточно памяти *)
      мПроц.Закончить(1)
    КОНЕЦ
  КОНЕЦ Ошибка;

ПРОЦЕДУРА Получ*(n: ЦЕЛОЕ): ЦЕЛОЕ;
      ВЕРНУТЬ мАпи.Alloc(64, n)
  КОНЕЦ Получ;

ПРОЦЕДУРА Выровнять*(n: ЦЕЛОЕ): ЦЕЛОЕ;
    ВЕРНУТЬ (4 - n MOD 4) MOD 4
  КОНЕЦ Выровнять;
КОНЕЦ модПамять.
