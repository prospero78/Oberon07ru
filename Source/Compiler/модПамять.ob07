(* Предосталвяет процедуры для работы с памятью.
        BSD-2               *)
МОДУЛЬ модПамять;

ИМПОРТ мОш := модОшибки,
    мОшКонст := модОшибкиКонст,
    мПроц := модПроцесс,
    мАпи := API;

ПРОЦЕДУРА MemErr*(err: BOOLEAN);
  НАЧАЛО
    ЕСЛИ err ТОГДА
      мОш.Сообщ(72);
      мПроц.Закончить(1)
    КОНЕЦ
  КОНЕЦ MemErr;

ПРОЦЕДУРА Получ*(n: INTEGER): INTEGER;
      ВЕРНУТЬ мАпи.Alloc(64, n)
  КОНЕЦ Получ;

КОНЕЦ модПамять.
