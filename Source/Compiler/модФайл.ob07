(* Модуль описывает тип файла вместе со всеми нужными операциями 
   BSD-2  
   *)

МОДУЛЬ модФайл;

ИМПОРТ API,
   mSys := SYSTEM;

ПРОЦЕДУРА Файл_Записать*(F, Buffer, Count: INTEGER): INTEGER;
   ПЕРЕМ
      res: INTEGER;
   НАЧАЛО
      API.WriteFile(F, Buffer, Count, mSys.ADR(res), 0)
      ВЕРНУТЬ res
   КОНЕЦ Файл_Записать;

ПРОЦЕДУРА Файл_Закрыть*(F: INTEGER);
  НАЧАЛО
     API.CloseHandle(F)
  КОНЕЦ Файл_Закрыть;

КОНЕЦ модФайл.