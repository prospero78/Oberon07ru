(*   предоставляет тип для работы с типами сущностей.  
BSD-2  *)

МОДУЛЬ модТипы;


ИМПОРТ мКонст := модКонстанты;

ТИПЫ
    
   тСтрока* = МАССИВ мКонст.макс_дл_пути ИЗ CHAR;
   
   туУзел* = УКАЗАТЕЛЬ НА ЗАПИСЬ
         Left*, Right*: туУзел;
         tLex*: INTEGER;
         Name*: тСтрока
      КОНЕЦ;
   
   SCANNER* = УКАЗАТЕЛЬ НА ЗАПИСЬ
            File*, ccol*, cline*, count*, col*, line*, tLex*, vINT*: INTEGER;
            ch*, vCHX*: CHAR;
            Lex*: тСтрока;
            vFLT*: LONGREAL;
            id*: туУзел;
            buf*, bufpos*: INTEGER;
            CR*, UTF8*: BOOLEAN
        КОНЕЦ;
    
КОНЕЦ модТипы.
