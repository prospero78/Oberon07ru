МОДУЛЬ модКоординаты;

ИМПОРТ мОт := модОтладка;

ТИПЫ
      туКоорд* = УКАЗАТЕЛЬ НА ЗАПИСЬ
         цМодуль*, цСтрока*, цПоз* : ЦЕЛОЕ
      КОНЕЦ;

ПЕРЕМ
   уОш*: туКоорд;
   уКод*: туКоорд;

ПРОЦЕДУРА Ош_Получ*(пуКрдОш: туКоорд);
   НАЧАЛО
      пуКрдОш.цСтрока := уОш.цСтрока;
      пуКрдОш.цПоз := уОш.цПоз
   КОНЕЦ Ош_Получ;

ПРОЦЕДУРА Код_Уст*(пцМодульНом, пцСтрНом: ЦЕЛОЕ);
   НАЧАЛО
      мОт.Печать("модКоорд.Коорд_Уст");
      уКод.цМодуль := пцМодульНом;
      уКод.цСтрока := пцСтрНом
   КОНЕЦ Код_Уст;

НАЧАЛО
   НОВ(уОш);
   КОНТРОЛЬ(уОш # ПУСТО);
   НОВ(уКод);
   КОНТРОЛЬ(уКод # ПУСТО);
КОНЕЦ модКоординаты.
