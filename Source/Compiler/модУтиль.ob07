  оепел
    s: ЛрХОШ.РяРПНЙЮ; n: INTEGER;
  мювюкн
    еякх win хкх lnx рнцдю
      n := гЮОХЯЮРЭ(hConsoleOutput, mSys.ADR(str), LENGTH(str))
    юеякх kos рнцдю
      API.DebugMsg(mSys.ADR(str), 0)
    йнмеж
  йнмеж OutString;

