(* Модуль предоставляет парочку процедур для проверки условий
      BSD-2
      *)
МОДУЛЬ модПроверка;

ИМПОРТ мОш := модОшибки,
      мПроц := модПроцесс,
      мФайл := модФайл;

ПРОЦЕДУРА Тест*(cond: BOOLEAN; line, col, code: INTEGER);
  НАЧАЛО
    ЕСЛИ ~cond ТОГДА
      мОш.ErrMsgPos(line, col, code, мФайл.файл.имя);
      мПроц.Закончить(1)
    КОНЕЦ
  КОНЕЦ Тест;

КОНЕЦ модПроверка.
